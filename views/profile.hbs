{{!-- Profile Page --}}
{{!-- SECTION-1 --}}
<div class="jumbotron">
    <div class="container">
        <h1 class="display-4 text-center">Welcome To My World</h1>
        <p class="lead text-center">Total Radness since 1998.</p>
    </div>
</div>

{{!-- SECTION-2 --}}
<div class="row">
    <div class="col-md-8 col-sm-12">
        <section class="text-white bg-info my-section">
            <p>Hi there!! It's me again BHARATH CHANDRA and this is profile page of this website and right down 
                below I provided feedback section where you can give feedback about this website and any kind
                of changes and modifications. Lastly thanks for your support and I really consider your feedback. 
                Thank You.
            </p>
        </section>
    </div>
    <div class="col-md-4 col-sm-12">
        <div class="card text-white bg-info mb-3 info-card" style="max-width: 18rem;">
            <div class="card-header">
                <img src="images/my-img.jpg" class="my-img" alt="my image">
            </div>
            <div class="card-body">
                <h5 class="card-title">BHARATH CHANDRA.D</h5>
                <p class="card-text">Author of this website</p>
                <p class="card-text"> Dreamer | Developer</p>
            </div>
        </div>
    </div>
</div>
<hr>
{{# if success }}
        <h2 class="text-success">Your feedback has been successfully submitted. Thanks for your co operation. <i class="far fa-smile"></i></h2>
{{ else }}
    {{# if errors }}
            <ul>
                {{# each errors }}
                    <li>{{ this.msg }} <i class="far fa-frown"></i></li>
                {{/each}}
            </ul>
    {{/if}}

{{!-- SECTION-3 --}}
<div class="row">
    <div class="col-md-8 col-sm-12 col">
        <form class="my-form" action="/profile/feedback" method="POST"> 
            <div class="row">
                <div class="col">
                    <h3 class="text-secondary">Firstname and Lastname</h3>
                    <input type="text" class="form-control" name="userName" placeholder="Enter your name">
                </div>
            </div>
            <div class="form-group">
                <h3 class="text-secondary">Email address</h3>
                <input type="text" class="form-control" name="userEmail" placeholder="name@example.com">
            </div>
            <fieldset class="form-group">
                <div class="row">
                    <h1 class="text-secondary col-form-label col-sm-2 pt-0">Rate my website</h1>
                    <div class="col-sm-10">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" value="option1" checked>
                            <label class="form-check-label">
                                Beyond any rating
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" value="option1" checked>
                            <label class="form-check-label">
                                5 Stars
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" value="option2">
                            <label class="form-check-label">
                                4 Stars
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" value="option2">
                            <label class="form-check-label">
                                Not eligible for rating
                            </label>
                        </div>
                    </div>
                </div>
            </fieldset>
            <div class="form-group">
                <h3 class="text-secondary">Feedback</h3>
                <textarea class="form-control" rows="5" name="userFeedback" placeholder="Your feedback goes here"></textarea>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary btn-lg" data-toggle="tooltip" data-placement="right" title="Click here to submit">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>
{{/if}}
